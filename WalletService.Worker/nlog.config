<?xml version="1.0" encoding="utf-8" ?>
<!-- XSD manual extracted from package NLog.Schema: https://www.nuget.org/packages/NLog.Schema-->
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      autoReload="true" >
    <extensions>
        <add assembly="NLog.Targets.KafkaAppender"/>
    </extensions>

    <!-- the targets to write to -->
    <targets>
        <target name="coloredConsoleWritter" xsi:type="ColoredConsole" useDefaultRowHighlightingRules="false"
                layout="{date}||xYz||${level:uppercase=true}||xYz||${message}||xYz||${callsite:fileName=false:includeSourcePath=false:methodName=false:cleanNamesOfAnonymousDelegates=true:cleanNamesOfAsyncContinuations=true}||xYz||${callsite:className=false:fileName=false:includeSourcePath=false:methodName=true:cleanNamesOfAnonymousDelegates=true:cleanNamesOfAsyncContinuations=true}||xYz||${callsite-linenumber}||xYz||${processid}||xYz||${threadid}">
            <highlight-row condition="level == LogLevel.Debug" foregroundColor="DarkGray" />
            <highlight-row condition="level == LogLevel.Info" foregroundColor="Gray" />
            <highlight-row condition="level == LogLevel.Warn" foregroundColor="Yellow" />
            <highlight-row condition="level == LogLevel.Error" foregroundColor="Red" />
            <highlight-row condition="level == LogLevel.Fatal" foregroundColor="Red" backgroundColor="White" />
        </target>
        <!--<target xsi:type="KafkaAppender"
                name="kafka"
                topic="logger-wallet-services-worker"
                layout="${date}||xYz||${level:uppercase=true}||xYz||${message}||xYz||${callsite:fileName=false:includeSourcePath=false:methodName=false:cleanNamesOfAnonymousDelegates=true:cleanNamesOfAsyncContinuations=true}||xYz||${callsite:className=false:fileName=false:includeSourcePath=false:methodName=true:cleanNamesOfAnonymousDelegates=true:cleanNamesOfAsyncContinuations=true}||xYz||${callsite-linenumber}||xYz||${processid}||xYz||${threadid}"
                brokers="localhost:9092"
                debug="false"
                async="true">
        </target>-->
    </targets>
    <!--  topic="test-${callsite:className=true:fileName=false:includeSourcePath=false:methodName=false}"-->
    <!-- rules to map from logger name to target -->
    <rules>
        <logger name="*" minlevel="Debug" writeTo="kafka, coloredConsoleWritter"/>
    </rules>
</nlog>
